      function addMember() {
        if (memberCount >= maxMembers) return;
        
        memberCount++;
        const container = document.querySelector('.members-container');
        const newMember = createMemberCard(memberCount);
        container.appendChild(newMember);
        
        updateMemberControls();
        enhanceSelectVisibility();
        generateSummary();
      }

      function removeMember(memberIndex) {
        if (memberCount <= minMembers) return;
        
        const memberCard = document.getElementById('member-card-' + memberIndex);
        if (memberCard) {
          memberCard.remove();
        }
        
        reorderMembers();
        updateMemberControls();
        generateSummary();
      }

      function reorderMembers() {
        const container = document.querySelector('.members-container');
        const cards = Array.from(container.children);
        let newIndex = 1;
        
        cards.forEach(function(card) {
          const header = card.querySelector('h4 span');
          if (header) {
            header.textContent = newIndex;
          }
          
          const titleText = card.querySelector('h4');
          if (titleText) {
            titleText.innerHTML = titleText.innerHTML.replace(/Integrante \d+/, 'Integrante ' + newIndex);
          }
          
          card.id = 'member-card-' + newIndex;
          newIndex++;
        });
        
        memberCount = cards.length;
      }

      function updateMemberControls() {
        const addBtn = document.getElementById('addMemberBtn');
        const memberCountSpan = document.getElementById('memberCount');
        
        if (addBtn) {
          addBtn.disabled = memberCount >= maxMembers;
          addBtn.style.opacity = memberCount >= maxMembers ? '0.5' : '1';
        }
        
        if (memberCountSpan) {
          memberCountSpan.textContent = memberCount + ' / ' + maxMembers + ' integrantes';
        }
      }



      function handleSubmit() {
        const submitBtn = document.getElementById('submitBtn');
        if (submitBtn) {
          submitBtn.textContent = '📤 Enviando...';
          submitBtn.style.pointerEvents = 'none';
        }
      }

      function enhanceSelectVisibility() {
        const selects = document.querySelectorAll('#registrationForm select, .member-card select');
        selects.forEach(function(select) {
          select.addEventListener('change', function() {
            if (this.value === '' || this.value === 'placeholder') {
              this.style.setProperty('color', '#9CA3AF', 'important');
            } else {
              this.style.setProperty('color', '#ffffff', 'important');
            }
            
            // Forzar estilos en las opciones después del cambio
            const options = this.querySelectorAll('option');
            options.forEach(function(option) {
              option.style.setProperty('background-color', '#1a1a1a', 'important');
              option.style.setProperty('color', '#ffffff', 'important');
            });
          });
          
          select.addEventListener('focus', function() {
            // Forzar estilos cuando se abre el dropdown
            const options = this.querySelectorAll('option');
            options.forEach(function(option) {
              option.style.setProperty('background-color', '#1a1a1a', 'important');
              option.style.setProperty('color', '#ffffff', 'important');
              option.style.setProperty('background', '#1a1a1a', 'important');
            });
          });
          
          // Aplicar color inicial
          if (select.value === '' || select.value === 'placeholder') {
            select.style.setProperty('color', '#9CA3AF', 'important');
          } else {
            select.style.setProperty('color', '#ffffff', 'important');
          }
          
          // Aplicar estilos iniciales a las opciones
          const options = select.querySelectorAll('option');
          options.forEach(function(option) {
            option.style.setProperty('background-color', '#1a1a1a', 'important');
            option.style.setProperty('color', '#ffffff', 'important');
          });
        });
      }

      function initializeMemberForms() {
        const container = document.querySelector('.members-container');
        if (container && !container.children.length) {
          // Crear 3 miembros iniciales (mínimo requerido)
          for (let i = 1; i <= 3; i++) {
            const member = createMemberCard(i);
            container.appendChild(member);
          }
          updateMemberControls();
          enhanceSelectVisibility();
        }
      }

      function initializeForm() {
        const form = document.getElementById('registrationForm');
        if (form) {
          form.addEventListener('submit', handleSubmit);
        }

        const addBtn = document.getElementById('addMemberBtn');
        if (addBtn) {
          addBtn.addEventListener('click', addMember);
        }

        document.addEventListener('input', generateSummary);
        document.addEventListener('change', generateSummary);
      }

      // Hacer funciones globales
      window.removeMember = removeMember;

      // ===================
      // TÉRMINOS Y CONDICIONES
      // ===================
      
      let termsAccepted = false;
      
      function adjustModalHeight() {
        const modal = document.getElementById('termsModal');
        if (!modal) return;
        
        const modalContent = modal.querySelector('.bg-card');
        if (!modalContent) return;
        
        const viewportHeight = window.innerHeight;
        const modalPadding = window.innerWidth < 640 ? 16 : 32; // 0.5rem o 1rem en cada lado
        const maxHeight = viewportHeight - modalPadding;
        
        modalContent.style.maxHeight = maxHeight + 'px';
      }

      function showTermsModal() {
        const modal = document.getElementById('termsModal');
        const readCompleteCheckbox = document.getElementById('readTermsComplete');
        
        if (!modal) return;
        
        // Reset checkboxes
        if (readCompleteCheckbox) readCompleteCheckbox.checked = false;
        const acceptCheckbox = document.getElementById('acceptTerms');
        if (acceptCheckbox) acceptCheckbox.checked = false;
        
        // Update accept button state
        updateAcceptButton();
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
        
        // Ajustar altura y hacer scroll al top después de abrir
        setTimeout(() => {
          adjustModalHeight();
          const modalContent = modal.querySelector('.overflow-y-auto');
          if (modalContent) {
            modalContent.scrollTop = 0;
          }
          
          // Enfocar el primer checkbox para mejor accesibilidad
          if (readCompleteCheckbox) {
            readCompleteCheckbox.focus();
          }
        }, 100);
      }

      function initializeTermsModal() {
        const modal = document.getElementById('termsModal');
        const acceptTermsBtn = document.getElementById('acceptTermsBtn');
        const readCompleteCheckbox = document.getElementById('readTermsComplete');
        const acceptCheckbox = document.getElementById('acceptTerms');
        const termsIndicator = document.getElementById('termsAcceptedIndicator');
        
        if (!modal || !acceptTermsBtn) return;
        
        // Ajustar altura del modal en carga inicial y resize
        adjustModalHeight();
        window.addEventListener('resize', adjustModalHeight);
        window.addEventListener('orientationchange', () => {
          setTimeout(adjustModalHeight, 100);
        });
        
        // Controlar habilitación del botón de aceptar
        window.updateAcceptButton = function() {
          const readCompleteCheckbox = document.getElementById('readTermsComplete');
          const acceptCheckbox = document.getElementById('acceptTerms');
          const acceptTermsBtn = document.getElementById('acceptTermsBtn');
          
          if (!readCompleteCheckbox || !acceptCheckbox || !acceptTermsBtn) return;
          
          const canAccept = readCompleteCheckbox.checked && acceptCheckbox.checked;
          acceptTermsBtn.disabled = !canAccept;
          
          if (canAccept) {
            acceptTermsBtn.classList.remove('disabled:bg-muted', 'disabled:text-muted-foreground', 'disabled:cursor-not-allowed');
            acceptTermsBtn.classList.add('hover:bg-success/90');
          } else {
            acceptTermsBtn.classList.add('disabled:bg-muted', 'disabled:text-muted-foreground', 'disabled:cursor-not-allowed');
            acceptTermsBtn.classList.remove('hover:bg-success/90');
          }
        }
        
        if (readCompleteCheckbox) readCompleteCheckbox.addEventListener('change', updateAcceptButton);
        if (acceptCheckbox) acceptCheckbox.addEventListener('change', updateAcceptButton);
        
        // Aceptar términos y cerrar modal
        acceptTermsBtn.addEventListener('click', function() {
          const readCompleteCheckbox = document.getElementById('readTermsComplete');
          const acceptCheckbox = document.getElementById('acceptTerms');
          
          if (readCompleteCheckbox && acceptCheckbox && readCompleteCheckbox.checked && acceptCheckbox.checked) {
            termsAccepted = true;
            
            // Ocultar modal
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto';
            
            // Mostrar indicador de términos aceptados
            if (termsIndicator) {
              termsIndicator.classList.remove('hidden');
              termsIndicator.classList.add('inline-flex');
            }
            
            // Mostrar notificación de éxito
            showSuccessNotification('✅ Términos y condiciones aceptados correctamente.');
            
            // Proceder con el envío del formulario
            setTimeout(() => {
              const form = document.getElementById('registrationForm');
              if (form) {
                // Marcar que los términos fueron aceptados para evitar el loop
                form.setAttribute('data-terms-accepted', 'true');
                
                // Enviar el formulario
                const submitBtn = document.getElementById('submitBtn');
                if (submitBtn) {
                  submitBtn.textContent = '📤 Enviando registro...';
                  submitBtn.disabled = true;
                }
                
                form.submit();
              }
            }, 1000);
          }
        });
        
        // Botón de cancelar
        const cancelBtn = document.getElementById('cancelTermsBtn');
        if (cancelBtn) {
          cancelBtn.addEventListener('click', function() {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto';
          });
        }
        
        // Permitir cerrar el modal con click fuera
        modal.addEventListener('click', function(e) {
          if (e.target === modal) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto';
          }
        });
        
        // Permitir cerrar con tecla ESC
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto';
          }
        });
      }
      
      function showSuccessNotification(message) {
        const notification = document.createElement('div');
        notification.className = 'fixed top-4 right-4 z-50 bg-success text-white px-6 py-3 rounded-lg shadow-xl flex items-center space-x-2 max-w-md';
        
        notification.innerHTML = `
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-sm font-medium">${message}</span>
        `;
        
        document.body.appendChild(notification);
        
        // Animar entrada
        setTimeout(() => {
          notification.classList.add('notification-enter');
        }, 100);
        
        // Remover después de 5 segundos
        setTimeout(() => {
          notification.classList.remove('notification-enter');
          notification.classList.add('notification-exit');
          setTimeout(() => {
            if (document.body.contains(notification)) {
              document.body.removeChild(notification);
            }
          }, 300);
        }, 5000);
      }
      
      function showWarningNotification(message) {
        const notification = document.createElement('div');
        notification.className = 'fixed top-4 right-4 z-50 bg-warning text-white px-6 py-3 rounded-lg shadow-xl flex items-center space-x-2 max-w-md';
        
        notification.innerHTML = `
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <span class="text-sm font-medium">${message}</span>
        `;
        
        document.body.appendChild(notification);
        
        // Animar entrada
        setTimeout(() => {
          notification.classList.add('notification-enter');
        }, 100);
        
        // Remover después de 4 segundos
        setTimeout(() => {
          notification.classList.remove('notification-enter');
          notification.classList.add('notification-exit');
          setTimeout(() => {
            if (document.body.contains(notification)) {
              document.body.removeChild(notification);
            }
          }, 300);
        }, 4000);
      }
      
      // Modificar función de envío del formulario para validar términos
      function handleSubmit(e) {
        // Verificar si ya se procesó la aceptación de términos
        const form = e.target;
        const termsAlreadyAccepted = form.getAttribute('data-terms-accepted') === 'true';
        
        if (!termsAccepted && !termsAlreadyAccepted) {
          e.preventDefault();
          
          // Primero validar campos requeridos antes de mostrar términos
          const teamName = document.getElementById('team-name').value.trim();
          if (!teamName) {
            showWarningNotification('⚠️ El nombre del equipo es obligatorio.');
            return false;
          }
          
          // Validar que haya al menos 3 miembros con datos completos
          let validMembers = 0;
          for (let i = 1; i <= memberCount; i++) {
            const nameEl = document.getElementById('member' + i + '-name');
            const emailEl = document.getElementById('member' + i + '-email');
            const phoneEl = document.getElementById('member' + i + '-phone');
            const ageEl = document.getElementById('member' + i + '-age');
            const languageEl = document.getElementById('member' + i + '-language');
            const foodEl = document.getElementById('member' + i + '-food');
            
            if (nameEl && nameEl.value.trim() && 
                emailEl && emailEl.value.trim() && 
                phoneEl && phoneEl.value.trim() &&
                ageEl && ageEl.value &&
                languageEl && languageEl.value &&
                foodEl && foodEl.value) {
              validMembers++;
            }
          }
          
          if (validMembers < 3) {
            showWarningNotification('⚠️ Se requieren mínimo 3 integrantes con todos los datos completos.');
            return false;
          }
          
          // Si la validación pasa, mostrar modal de términos
          showWarningNotification('📋 Por favor, lea y acepte los términos y condiciones para completar el registro.');
          setTimeout(() => {
            showTermsModal();
          }, 500);
          
          return false;
        }
        
        // Si los términos ya fueron aceptados, proceder normalmente
        return true;
      }

      // Inicialización
      document.addEventListener('DOMContentLoaded', function() {
        initializeTermsModal();
        initializeForm();
        initializeMemberForms();
        enhanceSelectVisibility();
        generateSummary();
      });
    </script>
